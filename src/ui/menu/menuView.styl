#menu-close-overlay
  height 100%
  width 100%
  z-index 99
  background rgb(0,0,0)
  opacity 0
  visibility hidden
  position absolute
  top 0
  left 0

#side_menu
  background #f6f6f6
  color textDarkGray
  position absolute
  visibility hidden
  top 0
  bottom 0
  height 100%
  min-height 100%
  max-height 100%
  width 85%
  display flex
  flex-flow column nowrap
  @media only screen and (min-width 500px)
    width 50%
  @media only screen and (min-width 960px)
    width 35%
  overflow hidden
  z-index 100
  box-shadow: 2px 0px 3px rgba(0, 0, 0, 0.3)
  transform translate3d(-100%, 0,0)
  section
    padding 0 15px
  h3
    text-transform uppercase
    color #fff
    font-weight normal
    margin 40px 0px 30px 0

.signInButton
  width: 60%;
  padding: 0.8em 0.25em;
  margin: 15px auto
  border: 1px solid #e2e2e2;
  background: linear-gradient(to bottom,rgba(245,245,245,1) 0%,rgba(240,240,240,1) 100%);
  color: textMediumGray
  font-weight: bold;
  border-radius: 2px;

.side_menu_header
  display flex
  flex-flow column nowrap
  justify-content center
  padding 5px 0
  min-height 65px
  border-bottom 1px solid #ddd
  > .kiddo
    display flex
    justify-content center
    height 50px
    width 100%
    font-size 46px
    color gold
  > .username
    white-space nowrap
    width 100%
    line-height 45px
    font-size 1.5rem
    display flex
    width 100%
    justify-content flex-start
    position relative
    padding-left 15px

.menu-toggleButton
  text-align left
  padding-left 15px
  line-height 40px
  &.side_link
    margin 0
    &:last-child
      margin-bottom 0
  &.active
    background darken(#f6f6f6, 8%)

.pingServerLed
  margin-left 15px
  margin-right 50px
  margin-bottom 10px
  > .pingServer
    display flex
    align-items center
    color textLightBg
    white-space nowrap
    font-size 0.75em
    text-align left
    > signal
      margin-right 1em
    .pingKey
      display inline-block
      width 45px
    .pingValue
      font-family Cousine

.side_links
  > .hr
    margin 10px 0
    border-bottom 1px solid #ddd

.side_link
  padding 10px 0 10px 15px
  margin 2px 0
  font-weight bold
  font-size 0.9em
  line-height 19px
  > span
    color darken(textLightGray, 15%)
    width 17px
    font-size 19px
    margin-right 15px
  > .menu_icon_game
    &::before
      content ''
      display inline-block
      width 18px
      height 18px
      background url('../../images/icons/game_icon_menu.svg') no-repeat
  > .highlight
    color gold
    font-weight bold
  &.emptyIcon
    padding-left 49px
  &:last-child
    margin-bottom 10px
  &.active
    background darken(#f6f6f6, 5%)

.sep_link
  color labelText
  padding 10px 15px 10px
